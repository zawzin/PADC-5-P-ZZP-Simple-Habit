<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin_medium"
    android:layout_marginBottom="@dimen/margin_small"
    app:cardCornerRadius="@dimen/margin_small"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy_image"
            android:foreground="@color/transparent_black"/>
        <TextView
            android:id="@+id/icon_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_lightbulb_outline_black_24dp"
            android:drawableTint="@color/icons"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/margin_medium_3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/icon_text"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Focus"
                android:textColor="@color/white_full"
                android:textSize="@dimen/text_regular_2x"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear the mind for high performance"
                android:textColor="@color/white_full"
                android:textSize="@dimen/text_regular"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>