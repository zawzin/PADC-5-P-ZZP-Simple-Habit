<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">
    <TextView
        android:id="@+id/tv_session_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/white_full"
        android:layout_margin="@dimen/margin_medium_2"/>
    <TextView
        android:id="@+id/tv_session_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_session_no"
        android:layout_alignBaseline="@id/tv_session_no"
        android:text="Introducing mindfulness"
        android:textColor="@color/white_full"/>
    <TextView
        android:id="@+id/tv_session_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5:33"
        android:layout_alignParentRight="true"
        android:textColor="@color/white_full"
        android:layout_margin="@dimen/margin_medium_2"
        android:layout_gravity="right"/>
</RelativeLayout>